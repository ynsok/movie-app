<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="126dp"
    android:layout_height="176dp"
    android:layout_marginEnd="3dp"
    app:cardCornerRadius="6dp"
    android:id="@+id/horizontal_cardView_id">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/poster_image_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/poster_of_movie_desc"
            android:scaleType="fitXY"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/movie_title_txt_id"
            style="@style/ExoFontWhiteBold"

            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:background="@color/colorGenresRecyclerBackground"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="@tools:sample/full_names" />

    </FrameLayout>
</android.support.v7.widget.CardView>
